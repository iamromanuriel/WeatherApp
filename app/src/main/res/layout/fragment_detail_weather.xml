<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_secundary"
        tools:context=".ui.detailsweather.DetailFragmentWeather">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_weather_response_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_vertical_default"
            android:background="@color/grad_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:viewBindingIgnore="true">

            <TextView
                android:id="@+id/title_weather_response"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/example_title_weather"
                android:textStyle="bold"
                android:textColor="@color/color_sedundary_gradient"
                android:layout_margin="@dimen/margin_vertical_default"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <ImageView
                android:id="@+id/image_icon_cloud"
                tools:src="@drawable/wi_cloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_vertical_default"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
